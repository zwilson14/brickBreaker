{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "DEBUG Raylib Game",
            "command": "C:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",                        // This enables the debugger!
                "${workspaceFolder}/src/main.c",
                "-I", "C:/dev/raylib/src",
                "-I", "C:/dev/raylib/src/external",
                "-L", "C:/dev/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-std=c11",
                "-Wall",
                "-o", "${workspaceFolder}/game.exe"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Links raylib and enables debugging symbols."
        }
    ]
}