{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "DEBUG Raylib Game",
            "command": "C:/mingw64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/main.c",
                "-I",
                "${workspaceFolder}/src/raylib/src",
                "-L",
                "${workspaceFolder}/src/raylib/src",
                "-lraylib",
                "-lopengl32",
                "-lgdi32",
                "-lwinmm",
                "-std=c11",
                "-Wall",
                "-o",
                "${workspaceFolder}/game.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Links local raylib and resolves library path issues."
        }
    ]
}